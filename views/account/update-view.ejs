<% if (title) { %>
  <h1>
    <%= title %>
  </h1>
  <% } else { res.redirect('/') } %>
    <%- messages() %>
      <% if (errors) { %>
        <ul class="notice">
          <% errors.array().forEach(error=> { %>
            <li>
              <%= error.msg %>
            </li>
            <% }) %>
        </ul>
        <% } %>

          <div class="items-container">
            <form action="/account/update-account" method="post" class="form-container" id="updateForm">
              <div class="input-container">
                <label for="account_firstname">First Name</label>
                <input value="<%= locals.account_firstname %>" type="text" name="account_firstname"
                  id="account_firstname">
              </div>
              <div class="input-container">
                <label for="account_lastname">Last Name</label>
                <input value="<%= locals.account_lastname %>" type="text" name="account_lastname" id="account_lastname">
              </div>
              <div class="input-container">
                <label for="account_email">Email</label>
                <input value="<%= locals.account_email %>" type="email" name="account_email" id="account_email">
              </div>
              <div class="button-container">
                <button class="button" type="submit">Update Account</button>
              </div>
              <input type="hidden" name="account_id" <% if(locals.account_id) { %> value="<%= locals.account_id %>"
                <% } %>>
            </form>
          </div>
          <div class="items-container">
            <form action="/account/update-password" method="post" class="form-container">
              <p>On submitting data, you'll update your current password!</p>
              <div class="input-container">
                <label for="password">Password</label>
                <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital
                  letter and 1
                  special character</span>
                <!-- Must have 1 capital letter, 1 number and special character -->
                <input type="password" name="account_password" min="12" id="password"
                  pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" placeholder="Password"
                  required>
              </div>
              <div class="button-container">
                <button type="submit" class="button">Update Password</button>
              </div>
              <input type="hidden" name="account_id" <% if(locals.account_id) { %> value="<%= locals.account_id %>"
                <% } %>>
            </form>
          </div>