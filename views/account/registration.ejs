<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <h1>
        <%- messages() %>
    </h1>
    <div class="items-container">
        <div class="form-container">
            <form action="/account/register" method="post" class="form">
                <div class="input-container">
                    <label for="first-name-input">First name</label>
                    <input type="text" name="account_firstname" id="first-name-input" placeholder="First name">
                </div>
                <div class="input-container">
                    <label for="last-name-input">Last name</label>
                    <input type="text" name="account_lastname" id="last-name-input" placeholder="Last name">
                </div>
                <div class="input-container">
                    <label for="email-input">Email</label>
                    <input type="email" name="account_email" id="email-input" placeholder="E-mail">
                </div>
                <div class="input-container">
                    <label for="password">Password</label>
                    <!-- Must have 1 capital letter, 1 number and special character -->
                    <input type="password" name="account_password" min="12" id="password" placeholder="Password">
                </div>
                <div class="button-container">
                    <button type="submit" class="button">REGISTER</button>
                </div>
            </form>
        </div>
    </div>
    <% } else { res.redirect('/') } %>