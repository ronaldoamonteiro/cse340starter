<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <% if(locals.loggedin===1) { %>
            <div class="logged-user-header">
                <a title="Access account management" href="/account">Welcome, <%= locals.accountData.account_firstname
                        %>
                </a>
                <a title="Click to log out" href="/account/logout">Logout</a>
            </div>
            <% } else {%>
                <a title="Click to log in" href="/account/login">My Account</a>
                <% }%>
    </div>
</header>